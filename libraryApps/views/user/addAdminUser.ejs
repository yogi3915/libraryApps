<%- include('../partial/navBar', { title: "User List" }); %>

<div class="container">

<center><p><h1>Add User Admin</h1></p></center>

    <form action="/user/addAdminUser" method="POST">
        <div class="form-group">
          <label>User Name</label>
          <input type="text" class="form-control" name="username">
        </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email">
          </div>

          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
          </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="role" id="exampleRadios1" value="admin" checked>
            <label class="form-check-label" for="exampleRadios1">
              Admin
            </label>
          </div><br>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

</div>

